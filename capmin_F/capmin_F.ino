void setup()
{
  SPI.begin();
  SPI.setBitOrder(MSBFIRST);

  Serial.begin(9600);        // connect to the serial port



  SPCR = 0x50;
  SPSR = 0x01;
  DDRB |= 0x2E;
  PORTB |= (1 << 1);

  // set adc prescaler  to 64 for 19kHz sampling frequency
  cbi(ADCSRA, ADPS2);
  sbi(ADCSRA, ADPS1);
  sbi(ADCSRA, ADPS0);


  sbi(ADMUX, ADLAR); // 8-Bit ADC in ADCH Register
  sbi(ADMUX, REFS0); // VCC Reference
  cbi(ADMUX, REFS1);
  cbi(ADMUX, MUX0);  // Set Input Multiplexer to Channel 0
  cbi(ADMUX, MUX1);
  cbi(ADMUX, MUX2);
  cbi(ADMUX, MUX3);

  sbi(ADMUX, MUX0);
  sbi(ADMUX, MUX2);
  // Timer2 PWM Mode set to fast PWM
  cbi (TCCR2A, COM2A0);
  sbi (TCCR2A, COM2A1);
  sbi (TCCR2A, WGM20);
  sbi (TCCR2A, WGM21);
  cbi (TCCR2B, WGM22);


  // Timer2 Clock Prescaler to : 1
  sbi (TCCR2B, CS20);
  cbi (TCCR2B, CS21);
  cbi (TCCR2B, CS22);



  cli();                         // disable interrupts to avoid distortion
  //sbi (TIMSK0,TOIE0);              // disable Timer0 !!! delay is off now
  sbi (TIMSK2, TOIE2);             // enable Timer2 Interrupt
  // cbi (TIMSK1,TOIE1);              // enable Timer2 Interrupt


  pinMode (8, INPUT);
  digitalWrite(8, HIGH);
  delay(5);
}


